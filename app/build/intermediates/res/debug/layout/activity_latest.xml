<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@drawable/brandysnifter"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.example.teeshirt.drinksapp.Latest">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dir"
        android:text="Select a drink category to see the brands under it or search for it by name."
        android:textSize="18dp"
        android:paddingLeft="55dp"
        android:paddingRight="50dp"
        android:paddingTop="150dp"
        android:textColor="#fff"
        android:textAlignment="center"/>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="OK. GOT IT"
        android:textSize="20dp"
        android:textColor="#000"
        android:background="#ffc107"
        android:id="@+id/all"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
