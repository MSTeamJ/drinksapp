<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.example.teeshirt.drinksapp.Talk">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What kind of drink would you like to have?"
        android:id="@+id/txtWhat"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tasteGroup"
        android:layout_below="@+id/txtWhat"
        android:layout_marginLeft="20dp">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sweet"
            android:id="@+id/sweet"
            android:textSize="18dp"/>
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spicy"
            android:text="Spicy"
            android:textSize="18dp"/>


        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dry"
            android:text="Dry"
            android:textSize="18dp"
            android:layout_marginBottom="30dp"/>


    </RadioGroup>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:text="Next"
        android:textSize="20dp"
        android:textColor="#000"
        android:background="#ffc107"
        android:id="@+id/tasteBtn"
        android:padding="20dp"
        android:layout_below="@+id/tasteGroup"/>
</RelativeLayout>
