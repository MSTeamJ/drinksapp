<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#000"
    tools:context="com.example.teeshirt.drinksapp.Details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



            <com.parse.ParseImageView
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:background="#fff"
                android:id="@+id/pic"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/pricelabel"
                android:paddingLeft="7dp"
                android:text="Price:"
                android:textSize="15dp"
                android:layout_marginRight="30dp"
                android:layout_below="@+id/pic"
                android:layout_marginBottom="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_toRightOf="@+id/pricelabel"
                android:layout_below="@+id/pic"
                android:id="@+id/price"
                android:textSize="15dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:id="@+id/desc"
                android:textSize="16dp"
                android:paddingLeft="7dp"
                android:layout_below="@+id/pricelabel"
                android:layout_marginBottom="10dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rater"
                android:textColor="#fff"
                android:textSize="18dp"
                android:layout_below="@+id/desc"
                android:text="Comments/ Reviews:"
                android:paddingLeft="7dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rater">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_below="@+id/rater"
                        android:layout_height="wrap_content"
                        android:hint="Write Comment here"/>
                </LinearLayout>
            </LinearLayout>




        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
