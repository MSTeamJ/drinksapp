<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teeshirt.drinksapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- android:name=".HashGen" -->
    <application
        android:name="com.example.teeshirt.drinksapp.DrinksApp"
        android:allowBackup="true"
        android:icon="@drawable/blackwhiskysplash"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.example.teeshirt.drinksapp.Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.splash"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.example.teeshirt.drinksapp.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Latest"
            android:label="@string/title_activity_latest" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Whiskey"
            android:label="@string/title_activity_whiskey" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Drinkclasses"
            android:label="@string/title_activity_drinkclasses"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Beer"
            android:label="@string/title_activity_beer"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Brandy"
            android:label="@string/title_activity_brandy"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Gin"
            android:label="@string/title_activity_gin"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Liqueur"
            android:label="@string/title_activity_liqueur"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Rum"
            android:label="@string/title_activity_rum"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Tequilla"
            android:label="@string/title_activity_tequilla"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Vodka"
            android:label="@string/title_activity_vodka"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Wine"
            android:label="@string/title_activity_wine"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Details"
            android:label="@string/title_activity_details"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Navigate"
            android:label="@string/title_activity_navigate" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.example.teeshirt.drinksapp.Result"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>