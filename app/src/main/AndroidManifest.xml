<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.teeshirt.drinksapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- android:name=".HashGen" -->
    <application
        android:name=".DrinksApp"
        android:allowBackup="true"
        android:icon="@drawable/blackwhiskysplash"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".splash"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".Latest"
            android:label="@string/title_activity_latest" >
        </activity>
        <activity
            android:name=".Whiskey"
            android:label="@string/title_activity_whiskey" >
        </activity>
        <activity
            android:name=".Drinkclasses"
            android:label="@string/title_activity_drinkclasses"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <activity
            android:name=".Beer"
            android:label="@string/title_activity_beer" >
        </activity>
        <activity
            android:name=".Brandy"
            android:label="@string/title_activity_brandy" >
        </activity>
        <activity
            android:name=".Gin"
            android:label="@string/title_activity_gin" >
        </activity>
        <activity
            android:name=".Liqueur"
            android:label="@string/title_activity_liqueur" >
        </activity>
        <activity
            android:name=".Rum"
            android:label="@string/title_activity_rum" >
        </activity>
        <activity
            android:name=".Tequilla"
            android:label="@string/title_activity_tequilla" >
        </activity>
        <activity
            android:name=".Vodka"
            android:label="@string/title_activity_vodka" >
        </activity>
        <activity
            android:name=".Wine"
            android:label="@string/title_activity_wine" >
        </activity>
        <activity
            android:name=".Details"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        </activity>
        <activity
            android:name=".Navigate"
            android:label="@string/title_activity_navigate" >
        </activity>
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name=".Result"
            android:label="@string/title_activity_result" >
        </activity>
    </application>

</manifest>
