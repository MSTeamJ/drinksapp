<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.teeshirt.drinksapp.Aroma">

    <TextView android:text="What aroma would you want to have from your drink?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAroma"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tasteGroup"
        android:layout_below="@+id/txtAroma"
        android:layout_marginLeft="20dp">
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Espresso"
        android:id="@+id/sweet"
        android:textSize="18dp"/>
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spicy"
        android:text="Vanilla"
        android:textSize="18dp"/>
    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/woody"
        android:text="Woody"
        android:textSize="18dp"/>

    <RadioButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dry"
        android:text="Dry"
        android:textSize="18dp"
        android:layout_marginBottom="30dp"/>

    </RadioGroup>

</RelativeLayout>
